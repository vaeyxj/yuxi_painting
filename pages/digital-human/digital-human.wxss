/* pages/digital-human/digital-human.wxss */
.container {
  padding: 0;
  background-color: #000;
  min-height: 100vh;
  color: #fff;
  position: relative;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

/* 数字人内容区域 */
.digital-human-section {
  width: 100%;
  padding-bottom: 40rpx;
}

/* 顶部banner */
.banner {
  width: 100%;
  height: 300rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.banner-text {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  z-index: 2;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10rpx;
  text-shadow: 0 2px 4px rgba(0,0,0,0.5);
}

.banner-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2px 4px rgba(0,0,0,0.5);
}

/* 功能区块网格 */
.features-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.feature-block {
  width: calc(50% - 15rpx);
  height: 220rpx;
  background-color: #1a1a1a;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 30rpx;
}

.feature-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.feature-title {
  position: absolute;
  bottom: 50rpx;
  left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.feature-desc {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 热门数字人示例区域 */
.samples-section {
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.samples-list {
  display: flex;
  overflow-x: auto;
  padding-bottom: 20rpx;
}

.sample-item {
  flex-shrink: 0;
  width: 200rpx;
  margin-right: 20rpx;
}

.sample-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-bottom: 10rpx;
}

.sample-info {
  padding: 0 10rpx;
}

.sample-name {
  font-size: 26rpx;
  color: #fff;
  margin-bottom: 5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sample-status {
  font-size: 22rpx;
  color: #999;
} 