/* pages/gallery/gallery.wxss */
.container {
  padding: 0;
  background-color: #000;
  min-height: 100vh;
  color: #fff;
  position: relative;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

/* 筛选选项卡 */
.filter-tabs {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.tab {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #999;
  position: relative;
}

.tab.active {
  color: #fff;
}

.tab.active:after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(to right, #4d9aff, #a566ff);
  border-radius: 2rpx;
}

/* 作品网格 */
.works-section {
  padding: 20rpx 0 40rpx;
}

.works-grid {
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

.work-card {
  width: calc(50% - 10rpx);
  background-color: #1a1a1a;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.work-image {
  width: 100%;
  height: 300rpx;
}

.work-info {
  padding: 15rpx;
}

.work-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 10rpx;
}

.work-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.work-author {
  font-size: 24rpx;
  color: #999;
}

.work-likes {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.work-likes text {
  font-size: 24rpx;
  color: #999;
} 