/* pages/profile/profile.wxss */
.container {
  padding: 0;
  background-color: #000;
  min-height: 100vh;
  color: #fff;
  position: relative;
}

/* 页面标题 */
.page-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.avatar-container {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  background-color: #333;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-name {
  font-size: 36rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.login-btn {
  background: linear-gradient(to right, #4d9aff, #a566ff);
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
}

/* 菜单列表 */
.menu-list {
  padding: 20rpx 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #fff;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
} 