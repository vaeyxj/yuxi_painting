/**index.wxss**/
.container {
  padding: 0;
  background-color: #000;
  min-height: 100vh;
  color: #fff;
  position: relative;
}

/* 顶部标题栏 */
.page-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.header-options {
  font-size: 40rpx;
  color: #fff;
}

/* 英雄区域 - 赛博风格网格背景 */
.hero-section {
  position: relative;
  width: 100%;
  height: 520rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  background-color: #000;
}

/* 赛博格网格背景 */
.cyber-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(to right, rgba(50, 50, 255, 0.1) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(50, 50, 255, 0.1) 1px, transparent 1px);
  background-size: 50px 50px;
  transform: perspective(500px) rotateX(60deg);
  transform-origin: center bottom;
  z-index: 1;
  animation: gridMove 20s linear infinite;
}

@keyframes gridMove {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 1000px;
  }
}

.hero-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.speech-bubble {
  position: absolute;
  top: 15%;
  left: 30%;
  background: linear-gradient(to right, #4d9aff, #a566ff);
  color: white;
  padding: 15rpx 40rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  z-index: 3;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.central-element {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 4;
  width: 200rpx;
  height: 200rpx;
  animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.05);
  }
}

.ai-robot {
  width: 100%;
  height: 100%;
}

/* 彩色颜料飞溅效果 */
.color-splash {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
}

/* 交互元素图标 */
.interaction-icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  z-index: 3;
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.interaction-icon.chat {
  top: 20%;
  left: 15%;
  transform: rotate(-15deg);
  animation: floatSlow 6s ease-in-out infinite;
}

.interaction-icon.video {
  bottom: 30%;
  right: 25%;
  transform: rotate(10deg);
  width: 80rpx;
  height: 80rpx;
  animation: floatSlow 7s ease-in-out infinite;
}

.interaction-icon.cloud {
  top: 35%;
  right: 18%;
  transform: rotate(-5deg);
  width: 70rpx;
  height: 70rpx;
  animation: floatSlow 5s ease-in-out infinite;
}

@keyframes floatSlow {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-15rpx) rotate(10deg);
  }
}

/* 控制面板 */
.control-panel {
  position: absolute;
  bottom: 25%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  z-index: 3;
  animation: glow 4s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 5rpx rgba(255, 255, 255, 0.2);
  }
  50% {
    box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.5);
  }
}

.control-text {
  color: #fff;
  font-size: 28rpx;
}

/* 功能卡片区 */
.features-section {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feature-card {
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: relative;
  background-color: transparent;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.feature-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* AI绘画卡片 - 紫色 */
.feature-card:nth-child(1) {
  background: linear-gradient(to right, #7e57ff, #a05aff);
}

/* AI转动漫卡片 - 蓝紫色 */
.feature-card:nth-child(2) {
  background: linear-gradient(to right, #4158D0, #9969c7);
}

/* AI换脸卡片 - 绿色 */
.feature-card:nth-child(3) {
  background: linear-gradient(to right, #00c07f,rgb(133, 238, 119));
}

/* AI头像生成器卡片 - 粉紫色 */
.feature-card:nth-child(4) {
  background: linear-gradient(to right, #ff6ec4, #7873f5);
}

.feature-icon-container {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  transition: transform 0.3s ease;
}

.feature-card:active .feature-icon {
  transform: scale(1.1);
}

.feature-info {
  margin-left: 20rpx;
  flex: 1;
}

.feature-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 右侧装饰图片 */
.feature-right-image {
  position: absolute;
  right: 20rpx;
  height: 150rpx;
  width: 150rpx;
  opacity: 0.8;
  transition: transform 0.3s ease;
}

.feature-card:active .feature-right-image {
  transform: translateX(5rpx);
}

/* 会员卡片 */
.membership-card {
  width: calc(100% - 60rpx);
  margin: 20rpx 30rpx 40rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-image: linear-gradient(135deg, #DC143C, #FF6347);
  color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.membership-card:active {
  transform: scale(0.98);
}

.membership-card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 60%);
  opacity: 0;
  transform: scale(0);
  transition: transform 0.5s ease, opacity 0.5s ease;
}

.membership-card:active::after {
  opacity: 1;
  transform: scale(1);
}

.membership-info {
  flex: 1;
}

.membership-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.membership-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.membership-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  background-color: #fff;
  color: #DC143C;
  border-radius: 30rpx;
  padding: 0;
  transition: all 0.3s ease;
}

.membership-card:active .membership-btn {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.9);
}

/* 区块标题样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.section-more {
  font-size: 26rpx;
  color: #999;
  transition: color 0.3s ease;
}

.section-more:active {
  color: #fff;
}

/* 精选作品 */
.featured-works-section {
  padding: 20rpx 0 40rpx;
}

.works-grid {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

.work-card {
  width: calc(50% - 10rpx);
  background-color: #1a1a1a;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.work-card:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.work-image {
  width: 100%;
  height: 300rpx;
}

.work-info {
  padding: 15rpx;
}

.work-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 10rpx;
}

.work-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.work-author {
  font-size: 24rpx;
  color: #999;
}

.work-likes {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.work-likes text {
  font-size: 24rpx;
  color: #999;
}

/* 创作提示 */
.cta-section {
  width: 100%;
  padding: 30rpx 0 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.cta-text {
  font-size: 32rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.cta-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.cta-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.cta-btn::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  opacity: 0;
  transform: scale(0);
  transition: transform 0.5s ease, opacity 0.5s ease;
}

.cta-btn:active::after {
  opacity: 1;
  transform: scale(1);
} 