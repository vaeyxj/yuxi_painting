/**index.wxss**/
/* 统一的背景和色调 */
.container {
  padding: 0;
  background-color: #080010;
  min-height: 100vh;
  color: #fff;
  position: relative;
}

/* 页面背景渐变效果 */
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 25% 10%, rgba(255, 90, 200, 0.05) 0%, transparent 50%),
    radial-gradient(circle at 75% 60%, rgba(120, 90, 255, 0.03) 0%, transparent 50%);
  z-index: -1;
  pointer-events: none;
}

/* 顶部标题栏 */
.page-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.header-options {
  font-size: 40rpx;
  color: #fff;
}

/* 英雄区域 - 与整体设计融合 */
.hero-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  margin-bottom: 0;
  background-color: transparent;
}

/* 赛博格网格背景 */
.cyber-grid {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 120%;
  background-image: 
    linear-gradient(to right, rgba(255, 90, 200, 0.2) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(255, 90, 200, 0.2) 1px, transparent 1px);
  background-size: 40px 40px;
  transform: perspective(500px) rotateX(60deg);
  transform-origin: center bottom;
  z-index: 1;
  animation: gridMove 20s linear infinite;
}

@keyframes gridMove {
  0% {
    background-position: 0 0;
  }
  100% {
    background-position: 0 1000px;
  }
}

/* 英雄区域过渡效果 */
.hero-section::after {
  content: '';
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: linear-gradient(to bottom, transparent, #080010);
  z-index: 5;
}

.hero-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}

.speech-bubble {
  position: absolute;
  top: 15%;
  left: 30%;
  background: linear-gradient(to right, #ff5acd, #b066ff);
  color: white;
  padding: 15rpx 40rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  z-index: 3;
  animation: float 3s ease-in-out infinite;
  box-shadow: 0 5rpx 15rpx rgba(255, 90, 200, 0.5);
  text-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.3);
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.central-element {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 4;
  width: 200rpx;
  height: 200rpx;
  animation: pulse 4s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.05);
  }
}

.ai-robot {
  width: 100%;
  height: 100%;
}

/* 彩色颜料飞溅效果 */
.color-splash {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 2;
}

/* 交互元素图标 */
.interaction-icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  z-index: 3;
  animation: rotate 10s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.interaction-icon.chat {
  top: 20%;
  left: 15%;
  transform: rotate(-15deg);
  animation: floatSlow 6s ease-in-out infinite;
}

.interaction-icon.video {
  bottom: 30%;
  right: 25%;
  transform: rotate(10deg);
  width: 80rpx;
  height: 80rpx;
  animation: floatSlow 7s ease-in-out infinite;
}

.interaction-icon.cloud {
  top: 35%;
  right: 18%;
  transform: rotate(-5deg);
  width: 70rpx;
  height: 70rpx;
  animation: floatSlow 5s ease-in-out infinite;
}

@keyframes floatSlow {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-15rpx) rotate(10deg);
  }
}

/* 控制面板 */
.control-panel {
  position: absolute;
  bottom: 25%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  display: flex;
  align-items: center;
  z-index: 3;
  animation: glow 4s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 5rpx rgba(255, 255, 255, 0.2);
  }
  50% {
    box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.5);
  }
}

.control-text {
  color: #fff;
  font-size: 28rpx;
}

/* 功能卡片区域 - 与英雄区域无缝衔接 */
.features-section {
  width: 90%;
  margin: -60rpx auto 0;
  padding: 30rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  position: relative;
  z-index: 10;
}

/* 卡片样式统一 */
.feature-card {
  width: 100%;
  height: 180rpx;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: relative;
  background-color: rgba(20, 5, 30, 0.5);
  box-sizing: border-box;
  transition: all 0.3s ease;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.25),
              0 0 10rpx rgba(255, 90, 200, 0.1);
  border: 1px solid rgba(255, 90, 200, 0.08);
}

/* 卡片渐变样式 */
.feature-card:nth-child(1) {
  background: linear-gradient(to right, rgba(126, 87, 255, 0.5), rgba(160, 90, 255, 0.5));
}

.feature-card:nth-child(2) {
  background: linear-gradient(to right, rgba(65, 88, 208, 0.5), rgba(153, 105, 199, 0.5));
}

.feature-card:nth-child(3) {
  background: linear-gradient(to right, rgba(0, 192, 127, 0.5), rgba(133, 238, 119, 0.5));
}

.feature-card:nth-child(4) {
  background: linear-gradient(to right, rgba(255, 110, 196, 0.5), rgba(120, 115, 245, 0.5));
}

.feature-icon-container {
  width: 100rpx;
  height: 100rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  transition: transform 0.3s ease;
}

.feature-card:active .feature-icon {
  transform: scale(1.1);
}

.feature-info {
  margin-left: 20rpx;
  flex: 1;
}

.feature-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 右侧装饰图片 */
.feature-right-image {
  position: absolute;
  right: 20rpx;
  height: 150rpx;
  width: 150rpx;
  opacity: 0.8;
  transition: transform 0.3s ease;
}

.feature-card:active .feature-right-image {
  transform: translateX(5rpx);
}

/* 会员卡片 */
.membership-card {
  width: calc(100% - 60rpx);
  margin: 20rpx 30rpx 40rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-image: linear-gradient(135deg, #DC143C, #FF6347);
  color: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.membership-card:active {
  transform: scale(0.98);
}

.membership-card::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 60%);
  opacity: 0;
  transform: scale(0);
  transition: transform 0.5s ease, opacity 0.5s ease;
}

.membership-card:active::after {
  opacity: 1;
  transform: scale(1);
}

.membership-info {
  flex: 1;
}

.membership-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.membership-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.membership-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  background-color: #fff;
  color: #DC143C;
  border-radius: 30rpx;
  padding: 0;
  transition: all 0.3s ease;
}

.membership-card:active .membership-btn {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.9);
}

/* 区块标题样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 15rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1px solid rgba(255, 90, 200, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  position: relative;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 0;
  width: 60rpx;
  height: 3rpx;
  background: linear-gradient(to right, rgba(255, 90, 200, 0.7), rgba(120, 90, 255, 0.7));
}

.section-more {
  font-size: 26rpx;
  color: #999;
  transition: color 0.3s ease;
}

.section-more:active {
  color: #fff;
}

/* 精选作品区域 */
.featured-works-section {
  width: 90%;
  margin: 20rpx auto;
  padding: 20rpx 0 30rpx;
  position: relative;
  z-index: 2;
}

.works-grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 统一的卡片样式 */
.work-card {
  width: calc(50% - 10rpx);
  background-color: rgba(20, 5, 30, 0.5);
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.25), 
              0 0 8rpx rgba(255, 90, 200, 0.1);
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 90, 200, 0.08);
}

.work-card:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.work-image {
  width: 100%;
  height: 300rpx;
}

.work-info {
  padding: 15rpx;
}

.work-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 10rpx;
}

.work-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.work-author {
  font-size: 24rpx;
  color: #999;
}

.work-likes {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.work-likes text {
  font-size: 24rpx;
  color: #999;
}

/* 创作号召区域 */
.cta-section {
  width: 90%;
  padding: 30rpx 0 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10rpx auto 40rpx;
  position: relative;
}

.cta-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: -5%;
  width: 110%;
  height: 100%;
  background: radial-gradient(ellipse at bottom, rgba(255, 90, 200, 0.05), transparent 70%);
  z-index: -1;
  pointer-events: none;
}

.cta-text {
  font-size: 34rpx;
  color: #fff;
  margin-bottom: 25rpx;
  text-shadow: 0 0 10rpx rgba(255, 90, 200, 0.5);
  font-weight: 500;
}

.cta-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(90deg, rgba(59, 130, 246, 0.5), rgba(139, 92, 246, 0.5));
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.25),
              0 0 10rpx rgba(139, 92, 246, 0.2);
  border: 1px solid rgba(139, 92, 246, 0.2);
}

.cta-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.cta-btn::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  opacity: 0;
  transform: scale(0);
  transition: transform 0.5s ease, opacity 0.5s ease;
}

.cta-btn:active::after {
  opacity: 1;
  transform: scale(1);
}

/* 3D装饰元素 */
.decorative-elements {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 3;
}

.floating-cube {
  position: absolute;
  background: rgba(255, 130, 230, 0.3);
  border: 1px solid rgba(255, 160, 240, 0.6);
  box-shadow: 0 0 20px rgba(255, 100, 220, 0.6);
  transform-style: preserve-3d;
  animation: floatAndRotate 10s ease-in-out infinite;
}

.cube-1 {
  width: 40rpx;
  height: 40rpx;
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.cube-2 {
  width: 30rpx;
  height: 30rpx;
  bottom: 30%;
  right: 15%;
  animation-delay: -3s;
}

.cube-3 {
  width: 50rpx;
  height: 50rpx;
  top: 35%;
  right: 25%;
  animation-delay: -6s;
}

@keyframes floatAndRotate {
  0% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
  100% {
    transform: translateY(0) rotate(360deg);
  }
}

/* 光影效果 */
.light-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    radial-gradient(circle at 30% 30%, rgba(255, 80, 200, 0.2) 0%, transparent 30%),
    radial-gradient(circle at 70% 60%, rgba(138, 43, 226, 0.2) 0%, transparent 40%);
  z-index: 2;
  pointer-events: none;
}

.shadow-3d {
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.4),
              0 0 15rpx rgba(255, 80, 200, 0.5);
}

.elevation-card {
  border-radius: 15rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5),
              0 0 30rpx rgba(255, 80, 200, 0.5);
  overflow: hidden;
  background: rgba(50, 25, 55, 0.6);
}

.glow-effect {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at center, rgba(255, 140, 230, 0.5) 0%, transparent 70%);
  z-index: 5;
  pointer-events: none;
}

/* 浮动动画样式 */
.floating {
  animation: float 4s ease-in-out infinite !important;
}

.floating-delay {
  animation: float 4s ease-in-out infinite !important;
  animation-delay: -1.5s !important;
}

.floating-delay-2 {
  animation: float 4s ease-in-out infinite !important;
  animation-delay: -3s !important;
}

/* 添加光晕和亮点 */
.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 15%),
    radial-gradient(circle at 70% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 15%);
  z-index: 1;
  pointer-events: none;
}

.hero-section::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, 
    rgba(255, 0, 170, 0.1) 0%, 
    transparent 50%, 
    rgba(138, 43, 226, 0.1) 100%);
  z-index: 2;
  pointer-events: none;
} 